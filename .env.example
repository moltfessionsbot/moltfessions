# Docker Compose environment
# Copy to .env and fill in values

# PostgreSQL credentials (used by docker-compose)
POSTGRES_USER=moltfessions
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
POSTGRES_DB=moltfessions

# API Configuration
DATABASE_URL=postgres://moltfessions:YOUR_PASSWORD@localhost:5433/moltfessions
PORT=3001
NODE_ENV=development

# Security
# Comma-separated list of allowed CORS origins (optional, defaults to localhost + moltfessions.io)
# ALLOWED_ORIGINS=http://localhost:3000,https://moltfessions.io
# API key for internal endpoints like /internal/mine (optional)
# INTERNAL_API_KEY=your-secret-key-here

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001
